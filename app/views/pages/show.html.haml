%label{:class => "label"}= t("activerecord.attributes.page.section_name", :default => t("activerecord.labels.section_name", :default => "Section name")) + ":"
%p= @page.section_name
%label{:class => "label"}= t("activerecord.attributes.page.order", :default => t("activerecord.labels.order", :default => "Order")) + ":"
%p= @page.order
%label{:class => "label"}= t("activerecord.attributes.page.book_id", :default => t("activerecord.labels.book_id", :default => "Book")) + ":"
%p= @page.book_id
%label{:class => "label"}= t("activerecord.attributes.page.book_type", :default => t("activerecord.labels.book_type", :default => "Book type")) + ":"
%p= @page.book_type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), polymorphic_path(@book), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_catalog_page_path(@page), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), polymorphic_path([@book, @page]), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'